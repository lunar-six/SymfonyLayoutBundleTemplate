<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block titlePrefix %}{% endblock %} | {% block titleSuffix %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="keywords" content="{{ 'meta.keywords'|trans }}" />
        <meta name="description" content="{{ 'meta.project_slogan'|trans }}" />
        <meta name="creator" content="{{ 'meta.creator'|trans }}" />
        <link rel="icon" sizes="16x16" href="{{ asset('images/logo/favicon-16x16.ico') }}" type="image/x-icon" />
        <link rel="icon" sizes="32x32" href="{{ asset('images/logo/favicon-32x32.ico') }}" type="image/x-icon" />
        <link rel="apple-touch-icon" href="{{ asset('images/logo/touch-icon-iphone.png') }}" type="image/png" />
        <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('images/logo/touch-icon-ipad.png') }}" type="image/png" />
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/logo/touch-icon-iphone-retina.png') }}" type="image/png" />
        <link rel="apple-touch-icon" sizes="167x167" href="{{ asset('images/logo/touch-icon-ipad-retina.png') }}" type="image/png" />
        {% block og %}
            <meta property="og:type" content="website" />
            <meta property="og:site_name" content="{{ app.request.httpHost }}" />
            <meta property="og:image" content="{{ asset('images/logo/logo-full.webp') }}" />
            <meta property="og:image:alt" content="{{ 'common.og_image_alt'|trans({'%ProjectName%': 'meta.project_name'|trans}) }}" />
            <meta name="twitter:card" content="summary" />
            <meta name="twitter:image" content="{{ asset('images/logo/logo-full.webp') }}" />
            <meta name="twitter:image:alt" content="{{ 'common.og_image_alt'|trans({'%ProjectName%': 'meta.project_name'|trans}) }}" />
        {% endblock %}
        {% block styles %}
            <link rel="preload" href="{{ preload(asset('styles/app.scss'), {as: 'style'}) }}" />
        {% endblock %}
        {% block locales %}
        {% endblock %}
    </head>

    <body>
        <header>
        </header>

        <main>
            {% block main %}
            {% endblock %}
        </main>

        <footer>
        </footer>

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </body>
</html>
